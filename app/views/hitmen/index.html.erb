
<h1>hitmen</h1>
<ul>
    <% @hitmen.each do |hitman| %>
    <div class="col">
      <div class="card">
      <img src="https://source.unsplash.com/random/400x300/?hitman" class="card-img-top hitman-img" alt="...">
        <div class="card-body">
          <h5 class="card-title fw-bold"><%= hitman.name %></h5>
          <p class="card-text"><%= hitman.location %></p>
          <p class="fst-italic"> <%= link_to "Visit hitman's profile", hitman, class: 'text-decoration-none link-danger' %> </p>
        </div>
      </div>
    </div>
    <% end %>
</div>
