<section class="h-100 gradient-custom-2">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-9 col-xl-7">
        <div class="card">
          <div class="rounded-top text-white d-flex flex-row" style="background-color: #000; height:200px;">
            <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-profiles/avatar-1.webp"
                alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2"
                style="width: 150px; z-index: 1">
              <%# <button type="button" class="btn btn-outline-dark" data-mdb-ripple-color="dark"
                style="z-index: 1;">
                 <%= link_to "Send Request", new_hitman_job_path(@hitman), class: "text-decoration-none" %>
              <%# </button> %>
            </div>
            <div class="ms-3" style="margin-top: 130px;">
              <h5>Your request with <%=@job.hitman.name%></h5>
            </div>
          </div>
          <div class="p-4 text-black" style="background-color: #f8f9fa;">
            <div class="d-flex justify-content-end text-center py-1">
              <div>
                <%= link_to "View all hitmen", root_path %>
              </div>
            </div>
          </div>
          <div class="card-body p-4 text-black">
            <div class="mb-5">
              <p class="lead fw-normal mb-1">Job details</p>
              <div class="p-4" style="background-color: #f8f9fa;">
                <p class="font-italic mb-1">Name of hitman: <%=@job.hitman.name%></p>
                <p class="font-italic mb-1">Location: <%=@job.location%></p>
                <p class="font-italic mb-1"> Details: <%= @job.hitman.bio %></p>
                <p class="font-italic mb-1">Needs to be carried out by: <%= @job.deadline %></p>
                <p class="font-italic mb-1">Price: <%= @job.price? ? @job.price : "Yet to be decided"%></p>
              </div>
            </div>
          </div>
          <div class="card-body p-4 text-black">
            <div class="mb-5">
              <p class="lead fw-normal mb-1">About your hitman</p>
              <div class="p-4" style="background-color: #f8f9fa;">
                <p class="font-italic mb-1"> Bio: <%= @job.hitman.bio %></p>
                <p class="font-italic mb-0">Method: <%= @job.hitman.method %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
