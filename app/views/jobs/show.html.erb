<section class="h-100 gradient-custom-">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-9 col-xl-7">
        <div class="card">
          <div class="rounded-top text-white d-flex flex-row" style="background-color: #000; height:200px;">
            <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
              <%= cl_image_tag(@job.hitman.photo.key, height: 140, width: 140, crop: :fill) %>
              <%# <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-profiles/avatar-1.webp"
                alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2"
                style="width: 150px; z-index: 1"> %>
            </div>
            <div class="ms-3" style="margin-top: 130px;">
              <h5>Your request with <%= link_to @job.hitman.name, hitman_path(@job.hitman.id)%></h5>
            </div>
          </div>
          <div class="p-4 text-black" style="background-color: #f8f9fa;">
            <div class="d-flex justify-content-end text-center py-1">
              <div>
                <%= link_to "View all hitmen", root_path %>
              </div>
            </div>
          </div>
          <div class="card-body-1 p-4 text-black">
            <div class="mb-2">
              <p class="lead fw-normal mb-1">Job details</p>
              <div class="p-4" style="background-color: #f8f9fa;">
                <p class="font-italic mb-1"><i class="fa-solid fa-location-crosshairs"></i> <%=@job.location%></p>
                <p class="font-italic mb-1"><i class="fa-regular fa-calendar-days"></i> <%= @job.deadline %></p>
                <p class="font-italic mb-1"><i class="fa-solid fa-dollar-sign"></i> <%= @job.price? ? @job.price : "Yet to be decided"%></p>
                <p class="font-italic mb-1">Name of hitman: <%=@job.hitman.name%></p>
                <p class="font-italic mb-1"> Details: <%= @job.details %></p>
              </div>
            </div>
          </div>
          <div class="card-body-1 p-4 text-black">
            <div class="mb-2">
              <p class="lead fw-normal mb-1">About your hitman</p>
              <div class="p-4" style="background-color: #f8f9fa;">
                <p class="font-italic mb-1"> Bio: <%= @job.hitman.bio %></p>
                <p class="font-italic mb-0">Method: <%= @job.hitman.method %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
